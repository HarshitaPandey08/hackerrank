#include<stdio.h>
#include<stdlib.h>

int main()
{
    int n,p,i;
    scanf("%d",&n);
    scanf("%d",&p);
    
    if(n-p==1)
    {
        if(p%2==0)
        {
            printf("0");
        }
        else if(p%2!=0 && p!=1) 
        {
            printf("1");
        }
        else {
            printf("0");
        }
    }
    else if(n-p==0)
    {
        printf("0");
    }
    else {
        i=n-p;
        if(i>p)

        {
            printf("%d",p/2);
        }
        else {
            printf("%d",i/2);
        }

    }
    
}
