#include<stdio.h>
int main()
{
    int n,k,i,c=0,h=0;
    scanf("%d%d",&n,&k);
    int a[n];
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++)
    {
        if(a[i]>h)
        {
            h=a[i];
        }
    }
    if(h>k)
    {
        printf("%d",h-k);
    }
    else {
        printf("0");
    }

}
