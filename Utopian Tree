#include<stdio.h>
int main()
{
    int t;
    scanf("%d",&t);
    while(t--)
    {
        int n,i=0,s=0;
        scanf("%d",&n);
        if(i==0)
        {
            s=s+1;
            
        }
        for(i=1;i<=n;i++)
        {
        
            if(i%2!=0 && i!=0)
            {
                s=s*2;
            }
            else {
                s=s+1;
            }
        }
        printf("%d\n",s);
    }
    
}

